                    admin: { password: adminpass, roles: [ 'ROLE_ADMIN' ] }
        nasajon_provider:
                id: custom_user_manager

    firewalls:
        dev:
            pattern:  ^/(_(profiler|wdt)|css|images|js)/
            security: false

        saml:
            pattern: ^/(?!login_check)
            anonymous: true
            aerial_ship_saml_sp:
